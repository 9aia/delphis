{
  "name": "delphis",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "bun@1.3.5",
  "description": "A CLI for remote dev environments with Tailscale & VS Code Remote SSH.",
  "module": "./cli/main.ts",
  "bin": {
    "delphis": "./dist/delphis",
    "delphis-mcd": "./dist/delphis-mcd"
  },
  "scripts": {
    "postinstall": "bun run typegen",
    "dev": "./scripts/dev.ts",
    "build": "./scripts/build.ts",
    "build:mcd": "./scripts/build-mcd.ts",
    "start": "bun run ./cli/main.ts",
    "preview": "./scripts/preview.ts",
    "typegen": "./scripts/typegen.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "bun --bun tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "mcd:find": "./mcd/find.ts",
    "mcd:open": "./mcd/open.ts",
    "release": "release-it"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@bunli/core": "^0.4.0",
    "@clack/prompts": "1.0.0-alpha.9",
    "chalk": "^5.6.2",
    "chalk-template": "^1.1.2",
    "dockerode": "^4.0.9",
    "mri": "^1.2.0",
    "neverthrow": "^8.2.0",
    "ofetch": "^1.5.1",
    "pino": "^10.1.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.7.3",
    "@bunli/generator": "^0.4.0",
    "@bunli/test": "^0.2.0",
    "@types/bun": "^1.3.5",
    "@types/dockerode": "^3.3.47",
    "eslint": "^9.39.2",
    "eslint-plugin-format": "^1.1.0",
    "release-it": "^19.2.3"
  },
  "delphis": {
    "mcd-entrypoint": "./mcd/open.ts"
  }
}
